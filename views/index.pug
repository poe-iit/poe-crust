extends layout

block main-content
    main
        p.h1 System Status: #{status}
        p.h1 Number of Nodes: #{numNodes}
        section.row
            div.col-md-6
                div.card
                    div.card-header
                        p.h1 Building Nodes
                    div.card-body
                        div.table-responsive
                            table.table.table-striped.table-hover
                                thead
                                    tr
                                        th #
                                        th Location
                                        th IP Address
                                        th Connections

                                tbody
                                    each node in nodeList
                                        tr
                                            td #{node.id}
                                            td #{node.name}
                                            td #{node.ipaddress}
                                            td #{node.connections}